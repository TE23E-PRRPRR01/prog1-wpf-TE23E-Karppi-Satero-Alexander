<Window x:Class="Övning1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Övning1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="5">
        <Label Margin="10" FontWeight="Bold" FontSize="20">Portoräknare</Label>
        <Label FontSize="15" FontWeight="Bold">Vikt (gram):</Label>
        <TextBox Name="txbVikt" Margin="10" Padding="5"></TextBox>
        <Button Click="KlickRäkna" Margin="10" Padding="5">Beräkna porto</Button>
        <Label Name="lblSvar" FontWeight="Bold"></Label>
    </StackPanel>
</Window>
