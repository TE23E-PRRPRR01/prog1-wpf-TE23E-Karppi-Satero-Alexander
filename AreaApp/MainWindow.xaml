<Window x:Class="AreaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AreaApp"
        mc:Ignorable="d"
        Title="Area uträknare" 
        MaxHeight="450" MaxWidth="400"
        SizeToContent="WidthAndHeight"
        Background="#DDD">
    <StackPanel Name="fönsterRuta" Margin="20">
        <Label FontWeight="Bold" FontSize="18">Räkna ut area på fyrkant</Label>

        <Label>Ange bredd</Label>
        <TextBox Padding="5" Name="txbBredd"></TextBox>

        <Label>Ange höjd</Label>
        <TextBox Padding="5" Name="txbHöjd"></TextBox>

        <Button Click="KlickRäkna" Padding="10" Background="LightBlue" Margin="0 10 0 10">Räkna ut</Button>

        <Label>Resultat</Label>
        <TextBox Padding="5" Name="txbResultat" IsReadOnly="True"></TextBox>

        <Button Click="KlickRensa" Margin="0 10 0 10" Background="Red">Rensa</Button>
    </StackPanel>
</Window>
