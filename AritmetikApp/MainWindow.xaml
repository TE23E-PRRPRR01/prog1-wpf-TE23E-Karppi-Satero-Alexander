<Window x:Class="AritmetikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label Margin="0 0 0 10" FontWeight="Bold" FontSize="20">Aritmetiken</Label>
        <Label FontWeight="Bold">Tal 1:</Label>
        <TextBox Margin="0 0 0 10" Name="txbTal1"></TextBox>
        <Label FontWeight="Bold">Operator (+, -, *, /):</Label>
        <TextBox Margin="0 0 0 10" Name="txbOperator" ></TextBox>
        <Label FontWeight="Bold">Tal 2:</Label>
        <TextBox Margin="0 5 0 5" Name="txbTal2"></TextBox>
        <Button Click="KlickBeräkna" Padding="5" Margin="0 5 0 5" FontWeight="Bold">Beräkna</Button>
        <Label Height="50" Margin="0 5 0 5" Name="lblResultat"></Label>
    </StackPanel>
</Window>
